<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.spotiffy.SignupController"
      alignment="CENTER" spacing="10" styleClass="vbox">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="First Name"/>
    <TextField fx:id="firstNameField" promptText="First Name"/>

    <Label text="Last Name"/>
    <TextField fx:id="lastNameField" promptText="Last Name"/>

    <Label text="Email"/>
    <TextField fx:id="emailField" promptText="Email"/>

    <Label text="Username"/>
    <TextField fx:id="usernameField" promptText="Username"/>

    <Label text="Password"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>

    <Button text="Sign up" onAction="#handleSignup"/>
    <Label fx:id="errorLabel" styleClass="warning-label"/>
    <Label fx:id="messageLabel" styleClass="message-label"/>
    <Button text="Back to Start" onAction="#switchToStart"/>

    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
